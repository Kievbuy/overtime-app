<h1>Posts</h1>

<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>
							#
						</th>
						<th>
							Date
						</th>
						<th>
							Rationale
						</th>
						<th>
							User
						</th>
					</tr>
				</thead>
				<tbody>
				    
				<%  a = 0 %>

                <% @posts.each do |post| %>
                    <% a += 1  %>
                    <tr>
                        <td><%= a  %></td>
                        <td><%= post.date %></td>
                        <td><%= post.rationale %></td>
                        <td><%= "#{post.user.first_name} #{post.user.last_name}" %></td>
                    </tr>
                
                <% end %>
                
				</tbody>
			</table>